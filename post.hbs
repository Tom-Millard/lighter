{{!< default}}
{{#post}}
<main class="content" role="main">
    <article class="{{post_class}}">

        <header class="post-header">
            <small>
                <time class="post__date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
                <tags>{{tags prefix=" on "}}</tags>
            </small>
            <h1 class="post__title">{{title}}</h1>
        </header>

        <section class="post-content">
            {{content}}
        </section>

        <hr />

        <footer class="post-footer">

        {{#author}}
            <section class="author">
                {{#if image}}
                <figure class="author__image">
                    <a href="{{url}}">
                        <img src="{{image}}" alt="{{name}}" width="100px"/>
                    </a>
                </figure>
                {{/if}}

                <h4 class="author_header">By <a href="{{url}}">{{name}}</a></h4>

                {{#if bio}}
                    <p>{{bio}}</p>
                {{else}}
                    <p>Read <a href="{{url}}">more posts</a> by this author.</p>
                {{/if}}
                <div class="author-meta">
                    {{#if website}}<p><a href="{{website}}">{{website}}</a></p>{{/if}}
                </div>
            </section>

        {{/author}}

        </footer>

    </article>
</main>

{{/post}}
