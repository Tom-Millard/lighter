{{#foreach posts}}
<article class="{{post_class}}">
    <header class="post__header">
        <small>
            <time class="post__date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="DD MMMM YYYY"}}</time>
            <tags>{{tags prefix=" on "}}</tags>
        </small>
        <h2 class="post__title"><a href="{{url}}">{{{title}}}</a></h2>
    </header>
    <section class="post__excerpt">
        <p>{{excerpt words="26"}}..</p>
        <p><small><a class="" href="{{url}}">Continue Reading</a></small></p>
    </section>
</article>
{{/foreach}}

{{pagination}}
